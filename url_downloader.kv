<URL_Downloader>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'URL Downloader'
        TextInput:
            id: url_input
            hint_text: 'Enter url here...'
        Button:
            text: 'Click to download'
            on_press: root.download()
        Button:
            id: exit_btn
            text: 'Close'
            on_press: app.stop()